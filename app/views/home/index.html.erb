<form id="data-form" action="/update_data" method="post" remote="true">
  <div class="form-group">
    <label>Select Region:</label>
    <select id="region" name="region" aria-label="Select Region">
      <option value="" disabled>Choose a region</option>
      <option value="de">Germany</option>
      <option value="en-GB">UK</option>
      <option value="en-US">United States</option>
    </select>
  </div>

  <div class="form-group">
    <label>Select Error:</label>
    <input type="range" id="errorSlider" name="errorSlider" min="0" max="10">
    <input type="number" id="errorText" name="errorText" min="0" max="1000">
  </div>

  <div class="form-group">
    <label>Select Seed:</label>
    <input type="number" id="seed" name="seed">
    <input type="button" value="Random" id="randomButton">
  </div>
</form>

<div class="table-container">
  <table id="user-table" class="table-users">
    <thead>
      <tr>
        <th>ID</th>
        <th>Random Identifier</th>
        <th>Name</th>
        <th>Address</th>
        <th>Phone Number</th>
      </tr>
    </thead>
    <tbody id="user-table-body">
      <!-- The table rows will be inserted here -->
    </tbody>
  </table>
</div>

<script>
  updateText();
</script>